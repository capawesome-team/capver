{
  "name": "@capawesome/capver",
  "version": "0.0.4",
  "description": "CLI for managing versions in a Capacitor project across multiple platforms.",
  "type": "module",
  "scripts": {
    "build": "rimraf ./dist && tsc && tsc-alias",
    "start": "npm run build && node ./dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "npm run prettier -- --check",
    "fmt": "npm run prettier -- --write",
    "prettier": "prettier \"**/*.{css,html,ts,js}\"",
    "release": "commit-and-tag-version",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.0.0"
  },
  "bin": {
    "capver": "./dist/index.js"
  },
  "keywords": [
    "capawesome",
    "cli",
    "capacitor",
    "ionic",
    "capver"
  ],
  "author": "Robin Genz <mail@robingenz.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capawesome-team/capver.git"
  },
  "bugs": {
    "url": "https://github.com/capawesome-team/capver/issues"
  },
  "homepage": "https://capawesome.io/",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/capawesome-team/"
    },
    {
      "type": "opencollective",
      "url": "https://opencollective.com/capawesome"
    }
  ],
  "dependencies": {
    "@robingenz/zli": "0.1.7",
    "@trapezedev/project": "7.1.3",
    "consola": "3.3.0",
    "systeminformation": "5.25.11",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@ionic/prettier-config": "4.0.0",
    "@types/node": "24.2.1",
    "@vitest/ui": "3.2.4",
    "commit-and-tag-version": "12.5.0",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "tsc-alias": "1.8.16",
    "typescript": "5.6.3",
    "vitest": "3.2.4"
  },
  "prettier": "@ionic/prettier-config"
}
